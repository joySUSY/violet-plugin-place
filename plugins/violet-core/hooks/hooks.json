{
  "description": "Violet Core v2 — Soul engine with encryption, compact recovery, model enforcement, and minimal token footprint",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"console.log('[VIOLET MODEL GUARD] STOP: Do NOT call WebFetch from main opus context. Delegate to Task(subagent_type: general-purpose, model: sonnet) instead. The sonnet agent will call WebFetch for you.')\"",
            "timeout": 5,
            "statusMessage": "Violet model guard checking..."
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"console.log('[VIOLET MODEL GUARD] STOP: Do NOT call WebSearch from main opus context. Delegate to Task(subagent_type: general-purpose, model: sonnet) instead. The sonnet agent will call WebSearch for you.')\"",
            "timeout": 5,
            "statusMessage": "Violet model guard checking..."
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"console.log('[VIOLET MODEL GUARD] Task agent spawning — MANDATORY: use model: opus for all agents. Only exception: web-fetching delegation uses model: sonnet.')\"",
            "timeout": 5,
            "statusMessage": "Violet model guard checking..."
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/soul-engine.js\" --compact",
            "timeout": 10,
            "statusMessage": "Violet Core preserving identity before compact..."
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/soul-engine.js\"",
            "timeout": 10,
            "statusMessage": "Violet Core awakening..."
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/soul-engine.js\"",
            "timeout": 10,
            "statusMessage": "Violet Core reloading..."
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/soul-engine.js\" --compact",
            "timeout": 10,
            "statusMessage": "Violet Core restoring after compact..."
          }
        ]
      }
    ]
  }
}
