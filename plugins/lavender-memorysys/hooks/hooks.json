{
  "description": "Lavender-MemorySys session hooks â€” zero-inject context loading and session persistence",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory \"${CLAUDE_PLUGIN_ROOT}/src\" session_hook.py start",
            "timeout": 10,
            "statusMessage": "Lavender loading session context..."
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory \"${CLAUDE_PLUGIN_ROOT}/src\" session_hook.py start",
            "timeout": 10,
            "statusMessage": "Lavender restoring after compact..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --directory \"${CLAUDE_PLUGIN_ROOT}/src\" session_hook.py stop",
            "timeout": 15,
            "statusMessage": "Lavender saving session..."
          }
        ]
      }
    ]
  }
}
