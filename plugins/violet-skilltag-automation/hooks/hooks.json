{
  "description": "Violet Skill Auto-Activator - Analyzes user prompts and suggests relevant skills",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/skill-activator.js\"",
            "timeout": 10
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/coreskill-verify.js\"",
            "timeout": 10,
            "statusMessage": "Verifying 15 core skills..."
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/coreskill-verify.js\"",
            "timeout": 10,
            "statusMessage": "Re-verifying core skills after compact..."
          }
        ]
      }
    ]
  }
}
