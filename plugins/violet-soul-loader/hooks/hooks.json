{
  "description": "Violet Soul Loader - Automatically loads soul configuration at startup",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/load-soul.js\"",
            "timeout": 15,
            "statusMessage": "Loading Violet Soul..."
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/load-soul.js\"",
            "timeout": 15,
            "statusMessage": "Reloading Violet Soul..."
          }
        ]
      }
    ]
  }
}
